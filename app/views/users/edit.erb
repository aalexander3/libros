

  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |message| %>
    <div class="ui red message">
      <ul>
        <li><%= message %></li>
      </ul>
    </div>
    <% end %>
  <% end %>


  <div class="ui three column centered grid">
    <div class="column">
      <div class="ui centered header">
        <br><br>
        <h1 class= "ui centered dividing header">Edit your info</h1>
      </div>
      <div class="ui form">
        <%= form_for @user do |f| %>
        <div class="fields">
          <%= f.text_field :name, class: "form-control", placeholder:"Enter Name" %><br>
          <%= f.text_area :bio, class: "form-control", placeholder:"Enter a brief bio..." %><br>
          <%= f.label :picture, "Upload a picture" %><br>
          <%= f.file_field :picture%><br>
          <br>
        </div>
      </div>
    </div>
  </div>

            <div class="ui five column centered grid">
              <h3 class="ui header">
                Pick some of your favorite tags
                <br><br>
              </h3>
              <% Tag.all.each do |tag| %>
                <div class="column">
                  <%= f.check_box :tags, { multiple: true, class: "ui checkbox" }, tag.id, false %>
                  <%= f.label tag.name %>
                </div>
              <% end %>
          </div>
          <br><br>
          <%= submit_tag "Update your account", class: "ui blue button centered" %>
        <% end %>

        <br><br>
