
<div class="ui three column centered grid">
  <div class="column">
    <div class="ui centered header">
      <br><br>
      <h1>Create New User</h1>
    </div>
    <div class="ui form">
      <%= form_for @user do |f| %>
      <div class="fields">
        <%= f.text_field :name, class: "form-control", placeholder:"Enter Name" %><br>
        <%= f.password_field :password, class: "form-control", placeholder:"Enter Password" %><br>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder:"Confirm Password"%><br>
        <%= f.text_area :bio, class: "form-control", placeholder:"Enter a brief bio..." %><br>
        <%= f.label :picture, "Upload a picture" %><br>
        <%= f.file_field :picture %><br>
        <br>
      </div>
    </div>
  </div>
</div>

          <div class="ui five column centered grid">
            <h3 class="ui header">
              Pick some of your favorite tags
              <br><br>
            </h3>
            <% Tag.all.each do |tag| %>
              <div class="column">
                <%= f.check_box :tags, { multiple: true, class: "ui checkbox" }, tag.id, false %>
                <%= f.label tag.name %>
              </div>
            <% end %>
        </div>
        <br><br>
        <%= submit_tag "Create new account", class: "ui blue button centered" %>
      <% end %>


