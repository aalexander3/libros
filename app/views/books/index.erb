  </div>
  <!--/.Carousel Wrapper-->
  <br><br>
</div>
</div>

  <h1 class="ui dividing header centered">
    Popular Tags
    <br><br>
  </h1>
  <br>


    <div class="ui six column grid">
      <% Tag.all.sample(30).each do |tag| %>
        <div class="column">
          <%= form_tag '/users/add_tag', method: 'post' do %>
            <%= hidden_field_tag :tag_id, tag.id %>
            <%= submit_tag "#" + "#{tag.name.split(' ')[0]}", class: "ui inverted blue button" %>
          <% end %>
        </div>
      <% end %>
  </div>


