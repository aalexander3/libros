                </div>
              </div>
              <% end %>
            </div>
            <br><br>
          </div>
          <!--/.Second slide-->

          <!--Third slide-->
          <div class="carousel-item">
            <div class="ui six column grid">
              <% @books.sample(6).each do |book| %>
              <div class="column">
                <div class="ui fluid card books">
                  <div class="ui image">
                    <%= image_tag "#{book.image}", class: "ui image" %>
                  </div>
                  <div class="content">
                    <a class="header"><%= link_to book.title, book %></a>
