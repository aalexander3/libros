                <div class="ui fluid card books">
                  <div class="ui image">
                    <%= image_tag "#{book.image}", class: "ui image" %>
                  </div>
                  <div class="content">
                    <a class="header"><%= link_to book.title, book %></a>
                  </div>
                </div>
              </div>
              <% end %>
            </div>
      <br><br>
          </div>
