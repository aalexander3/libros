
<% if flash[:message] %>
  <div class="alert alert-warning">
    <strong><%= flash[:message] %></strong>
  </div>
<% end %>

<div class="jumbotron">
  <h3>Sign in</h3>
</div>


<%= form_tag '/login' do %>
<%= label_tag :name %>
<%= text_field_tag :"user[name]" %>
<%= label_tag :password %>
<%= password_field_tag :"user[password]" %>
<%= submit_tag "Sign In"%>
<% end %>
